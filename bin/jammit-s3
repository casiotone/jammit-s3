#!/usr/bin/env ruby
require 'jammit-s3'
require 'vendor/plugins/simpleconfig/lib/simple_config'

SimpleConfig.for :application do
  load File.join(Rails.root, "config", "settings", "application.rb"),   :if_exists? => true
  load File.join(Rails.root, "config", "settings", "#{ENV['RAILS_ENV']}.rb"),  :if_exists? => true
  load File.join(Rails.root, "config", "settings", "local.rb"),         :if_exists? => true
end

Jammit::S3CommandLine.new
